@{
    ViewBag.Title = "Giới thiệu về chúng tôi";
}
<h2>@ViewBag.Title.</h2>

<style>
    #primary-menu a {
        color: #333;
    }
</style>



<section id="blog" class="blog blog-standard">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="row">
                    <!-- Blog Entry #1 -->
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="blog-entry">

                            <div class="entry--content">
                                
                                <div class="entry--title">
                                    <h4  ><a href="#">Chất lượng</a></h4>
                                </div>
                                <div class="entry--img">
                                    <a href="#">

                                        <img src="~/Assets/Data/Images/cf1.jpg" alt="entry image" />
                                    </a>
                                </div>
                                <div class="entry--bio" style="color:black; font-size:medium;">
                                    CAFEONLINE của chúng tôi có nhiều sự lựa chọn về nước uống cũng như chât lượng của chúng nhờ vào năng lực của các pha chế chuyên nghiệp. Các bạn hãy thử và cảm nhận.
                                </div>
                            </div>
                            <!-- .entry-content end -->
                        </div>
                        <!-- .blog-entry end -->
                    </div>

                    <!-- Blog Entry #2 -->
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="blog-entry">

                            <div class="entry--content">
                                
                                <div class="entry--title">
                                    <h4><a href="#">Đội ngũ nhân viên</a></h4>
                                </div>
                                <div class="entry--img">
                                    <a href="#">

                                        <img src="~/Assets/Data/Images/shipper.jpg" alt="entry image" />
                                    </a>
                                </div>

                                <div class="entry--bio" style="color:black; font-size:medium;">
                                    Đội ngũ quản lý trang web chuyên nghiệp cùng với đội ngũ shipper thân thiện, làm việc nghiêm túc sẽ giúp sản phẩm tới tay người tiêu dùng một cách nhanh nhất.
                                </div>
                            </div>
                            <!-- .entry-content end -->
                        </div>
                        <!-- .blog-entry end -->
                    </div>

                    <!-- Blog Entry #3 -->
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="blog-entry">

                            <div class="entry--content">
                                
                                <div class="entry--title">
                                    <h4><a href="#">Giao diện</a></h4>
                                </div>
                                <div class="entry--img">
                                    <a href="#">

                                        <img src="~/Assets/Data/Images/giaodien.png" alt="entry image"/>
                                    </a>
                                </div>
                                <div class="entry--bio" style="color:black; font-size:medium;">
                                    Đặc biệt, trang web CAFEONLINE của chúng tôi với giao diện đẹp, hình ảnh chân thật, và rất dễ sử dụng ngay từ lần đầu tiên đến với chúng tôi. Hy vọng các bạn sẽ cảm thấy thích thú khi trải nghiệm cùng chúng tôi. Hãy đăng ký thành thành viên của chúng tôi để được nhận các ưu đãi.
                                </div>
                            </div>
                            <!-- .entry-content end -->
                        </div>
                        <!-- .blog-entry end -->
                    </div>

                    <!-- Blog Entry #3 -->
                    
                </div><!-- .row end -->
               
            </div><!-- .col-md-9 end -->
        </div><!-- .row end -->
    </div><!-- .container end -->
</section><!-- #blog end -->

