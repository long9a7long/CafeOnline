@model Model.EF.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var relatedProduct = (List<Model.EF.Product>)ViewBag.Relateproduct;
}
<section class="shop shop-cart bg-white">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12  col-md-9">
                <div class="content_top">
                    <div>
                        <p><a href="/san-pham/@Model.ProdID">@Model.ProdName</a></p>
                    </div>
                </div>
                <!-- Alert Message -->
                <div class="alerts">
                    <div class="alert-icon">
                        <i class="fa fa-check-circle"></i>
                    </div>
                    <div class="alert-content">
                        <h4>Item Was Successfully Added To Your Cart.</h4>
                        <p>@Model.Decription</p>
                    </div>
                </div>
                <!-- .aret end -->

                <div class="product-img mb-50">
                    <img class="img-responsive" src="@Model.ImageUrl" alt="product image">
                </div>
                <!-- .product-img end -->
                <div class="product-title">
                    <h3>@Model.ProdName</h3>
                </div>
                <!-- .product-title end -->
                <div class="product-meta mb-30">
                    <div class="product-price pull-left pull-none-xs">
                        @Model.Cost VNĐ
                    </div>
                </div>
                <div class="product-desc">
                    <p>@Model.Decription</p>
                </div>
                <!-- .product-desc end -->
                <!-- .product-details end -->
                <div class="product-action clearfix">
                    <div class="product-quantity pull-left pull-none-xs">
                        <span class="qua">Số lượng</span>
                        <span>
                            <a href="#"><i class="fa fa-minus"></i></a>
                            <input type="text" value="2" id="pro-qunt" name="sl" readonly>
                            <a href="#"><i class="fa fa-plus"></i></a>
                        </span>
                    </div>
                    <div class="product-cta text-right text-center-xs">
                        <a class="btn btn--primary btn--rounded" href="/them-gio-hang?productId=@Model.ProdID&count=1">add to cart</a>
                    </div>
                </div>
                <!-- .product-action end -->
                <!-- .product-share end -->
                <!-- .product-tabs end -->
                <!-- .row end -->
                <div class="product-related shop-categories">
                    <div class="product-related-title">
                        <h5>TIN LIÊN QUAN</h5>
                    </div>
                    <div class="row">
                        <!-- Product #1 -->
                        @foreach (var item in relatedProduct)
                        {
                            var url = "/ chi-tiet /" + item.ProdID;
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="product-item">
                                    <div class="product--img">
                                        <img src="@item.ImageUrl" alt="Product" />
                                        <div class="product--hover">
                                            <div class="product--action">
                                                <a href="@url">Add To Cart</a>
                                            </div>
                                        </div>
                                        <!-- .product-overlay end -->
                                    </div>
                                    <!-- .product-img end -->
                                    <div class="product--content">
                                        <div class="product--title">
                                            <h3><a href="@url">Honey Pancakes</a></h3>
                                        </div>
                                        <!-- .product-title end -->
                                        <div class="product--price">
                                            <span>@item.Cost VNĐ</span>
                                        </div>
                                        <!-- .product-price end -->
                                    </div>
                                    <!-- .product-bio end -->
                                </div>
                            </div>
                        }
                    </div>
                    <!-- .row end -->
                </div>
                <!-- .product-related end  -->
            </div>
        </div>
    </div>
</section>


