@model  CafeOnline.Models.LoginModel
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #primary-menu a {
        color: #333;
    }
    .a{
        width:30%;
        margin:0 auto;
        color: tomato;
    }
</style>
<div class="a">
    <p align="center" style="color:tomato;font-size:large;"><b>ĐĂNG NHẬP NGAY</b></p>
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.UserID)
                @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", @autofocus = "autofocus" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            </div>

            <!-- Change this to a button or input when using this as a form -->
            <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
        </fieldset>
        <a href="Register">Đăng ký thành viên.</a>
    }
</div>